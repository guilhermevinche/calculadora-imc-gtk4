{
    "id": "org.guilhermevinche.calculadora-imc-gtk4",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "main.py",
    "finish-args": [
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
],
    "modules": [
        {
            "name": "calculadora-imc-gtk4",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 main.py /app/bin/main.py"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "main.py"
                }
            ]
        }
    ]
}
